@model ClassWeb.Models.Student.DetailModel

@{
    ViewBag.Title = "學生資料維護頁";
}
@using (Html.BeginForm())
{
    switch (Model.ActionMode)
    {
        case "Add":
            <h1>新增學生資料</h1>
            break;
        case "Update":
            <h1>修改學生資料</h1>
            break;
        case "Delete":
            <h1>刪除學生資料</h1>
            break;
    }
    <h2>學生資料</h2>
  
    if (ViewBag.ResultMessage != null)
    {
        @Html.ValidationSummary(true, (string)ViewBag.ResultMessage, new { @class = "text-danger" })
    }

    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                學號
            </dt>

            <dd>
                @if (Model.ActionMode == "Add")
                {
                    <label>自動編號</label>
                }
                else
                {
                    @Html.DisplayFor(o => o.No, new { htmlAttributes = new { @class = "form-control" } })
                    <input type="hidden" name="No" value="@Model.No" />
                }

            </dd>

            <dt>
                姓名
            </dt>

            <dd>
                @if (Model.ActionMode != "Delete")
                {
                    @Html.EditorFor(o => o.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(o => o.Name, "", new { @class = "text-danger" })
                }
                else
                {
                    @Html.DisplayFor(o => o.Name)
                }
            </dd>

            <dt>
                生日
            </dt>

            <dd>
                @if (Model.ActionMode != "Delete")
                {
                    @Html.EditorFor(o => o.Birthday, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(o => o.Birthday, "", new { @class = "text-danger" })
                }
                else
                {
                    @Html.DisplayFor(o => o.Birthday)
                }
            </dd>

            <dt>
                Email
            </dt>

            <dd>
                @if (Model.ActionMode != "Delete")
                {
                    @Html.EditorFor(o => o.Email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(o => o.Email, "", new { @class = "text-danger" })
                }
                else
                {
                    @Html.DisplayFor(o => o.Email)
                }
            </dd>

        </dl>
    </div>
    <p>
        <input type="submit" value="存檔" class="btn btn-outline-dark" />
        @Html.ActionLink("返回", "SearchList", new { }, new { @class = "btn btn-outline-dark" })
    </p>
}

